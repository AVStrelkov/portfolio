      .user
        .user__item
          .user__list
            img(src="./assets/images/user.jpg", alt="logo").user__pic
            .user__name Александр Стрелков
            .user__text Личный сайт веб разработчика
        .user__social
          .social
            ul.social__item
              li.social__list
                a(href="#").social__link
                  svg.social__svg
                    use(xlink:href="./assets/images/icons/sprite.svg#vk")
              li.social__list
                a(href="#").social__link
                  svg.social__svg
                    use(xlink:href="./assets/images/icons/sprite.svg#github")
              li.social__list
                a(href="#").social__link
                  svg.social__svg
                    use(xlink:href="./assets/images/icons/sprite.svg#in")
